<UserControl x:Class="WPF.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1680" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="840"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="1" VerticalAlignment="Top" Source="/assets/Menu/Top.png" Width="580" Margin="0 25 170 0"/>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0 0 0 50" Height="100" WindowChrome.IsHitTestVisibleInChrome="True" 
                    VerticalAlignment="Top" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="MinimizeButton" Margin="0 0 10 0" FontSize="16" Opacity="0.6" FontWeight="Bold" Width="50" Height="50" Background="#212121" BorderThickness="0">
                <Button.Content>
                    <Image Source="\WPF;component\assets\WindowStyle\minButtonIcon.png" Height="18"/>
                </Button.Content>
            </Button>
            <Button x:Name="MaximizeButton" Margin="0 0 10 0" FontSize="16" Opacity="0.6" FontWeight="Bold" Width="50" Height="50" Background="#212121" BorderThickness="0" >
                <Button.Content>
                    <Image Source="/assets/WindowStyle/maxBtnIcon.png" Width="20" Height="20"/>
                </Button.Content>
            </Button>
            <Button x:Name="CloseButton" Margin="0 0 15 0" FontSize="16" Opacity="0.6" FontWeight="Bold" Width="50" Height="50" Background="#212121" BorderThickness="0">
                <Button.Content>
                    <Image Source="\WPF;component\assets\WindowStyle\closeButtonIcon.png" Height="16"/>
                </Button.Content>
            </Button>
        </StackPanel>

        <Border Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="140"/>
                </Grid.RowDefinitions>

                <Image Grid.RowSpan="3" Source="/assets/Menu/Background.png" Width="840" Height="1000"/>
                <Border Grid.Row="3">
                    <Border Background="White" Width="560" Height="70" CornerRadius="40" Margin="0 0 0 30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition Width="0.85*"/>
                                <ColumnDefinition Width="0.65*"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="/assets/MainPage/Watch.png" HorizontalAlignment="Right" Width="50" Height="50"/>
                            <Button x:Name="menu" Grid.Column="1" Width="80" Height="50" Content="Menu" FontFamily="Verdana" Background="#F8F8F8" 
                            BorderThickness="0" FontSize="15" Style="{StaticResource MaterialDesignFlatButton}"/>
                            <Button x:Name="restaurant" Grid.Column="2" Width="120" Height="50" Content="Restaurant" FontFamily="Verdana" Background="#FFFFFF" 
                            BorderThickness="0" FontSize="15" Style="{StaticResource MaterialDesignFlatButton}"/>
                            <Button x:Name="classes" Grid.Column="3" Width="90" Height="50" Content="Classes" FontFamily="Verdana" Background="#FFFFFF" 
                            BorderThickness="0" FontSize="15" Style="{StaticResource MaterialDesignFlatButton}"/>
                            <Button x:Name="booking" Grid.Column="4" Width="160" Height="50" Content="BOOK A TABLE" FontFamily="Verdana" Background="Black" 
                            Foreground="White" BorderThickness="0" FontSize="16" Margin="0 0 10 0">
                                <Button.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="15" Background="Black" BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Border>
                </Border>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" Grid.Column="1" Name="scrollviewer3" HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Disabled" CanContentScroll="True">
            <StackPanel Orientation="Vertical">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Margin" Value="0 50 0 0"/>
                        <Setter Property="Width" Value="650"/>
                    </Style>
                </StackPanel.Resources>
                <Image Source="/assets/Menu/Starters.png" Height="420"/>
                <Image Source="/assets/Menu/Breakfast.png" Height="540"/>
                <Image Source="/assets/Menu/Dinner.png" Height="540"/>
                <Image Source="/assets/Menu/Drinks.png" Height="420"/>
                <Image Source="/assets/Menu/Footer.png" Height="340"/>
            </StackPanel>
        </ScrollViewer>

        <Button x:Name="Down" Content="↓" Grid.Column="1" Grid.Row="1" Margin="0 0 15 15" VerticalAlignment="Bottom" Foreground="Azure" Background="#212121" Opacity="0.5" Width="50" Height="50"
                HorizontalAlignment="Right" Style="{DynamicResource MaterialDesignFlatButton}" Click="Down_Click"/>

        <Button x:Name="Up" Grid.Column="1" Grid.Row="1" Content="↑" Foreground="Azure" Background="#212121" Opacity="0.5" Width="50" Height="50" VerticalAlignment="Top" 
                HorizontalAlignment="Right" Style="{DynamicResource MaterialDesignFlatButton}" Margin="10 55 10 0" Click="Up_Click" Visibility="Hidden" Cursor="Hand"/>

    </Grid>
</UserControl>
