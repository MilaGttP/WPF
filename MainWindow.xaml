
    <Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Calculator" Height="540" Width="335" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Opacity=".95" Color="LightGray"/>
    </Window.Background>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="20"/>
    </WindowChrome.WindowChrome>
     <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" VerticalAlignment="Top" Background="Transparent">
            <StackPanel Height="30" WindowChrome.IsHitTestVisibleInChrome="True" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock Text="Calculator" Margin="0 8 230 0" FontSize="14"/>
                <Button Name="CloseButton" FontSize="16" FontWeight="Bold" Width="30" Background="Transparent" BorderThickness="0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="assets\CloseBtnIcon.png" Height="12"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="3">
            <WrapPanel Margin="0 12 0 0" Orientation="Horizontal" ItemHeight="75" ItemWidth="75" HorizontalAlignment="Center">
                <WrapPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="2" />
                        <Setter Property="FontSize" Value="25" />
                        <Setter Property="Background" Value="LightGray" />
                        <Setter Property="Opacity" Value="0.95" />
                        <Setter Property="BorderBrush" Value="LightGray" />
                    </Style>
                </WrapPanel.Resources>
                <Button x:Name="CEBtn" Content="CE" Foreground="Gray"/>
                <Button x:Name="CBtn" Content="C" Foreground="Gray"/>
                <Button x:Name="ClearLastBtn" Content="&lt;" Foreground="Gray"/>
                <Button x:Name="DivBtn" Content="\" Foreground="Gray"/>
                <Button x:Name="SevenBtn" Content="7"/>
                <Button x:Name="EightBtn" Content="8"/>
                <Button x:Name="NineBtn" Content="9"/>
                <Button x:Name="MultBtn" Content="*" Foreground="Gray"/>
                <Button x:Name="FourBtn" Content="4"/>
                <Button x:Name="FiveBtn" Content="5"/>
                <Button x:Name="SixBtn" Content="6"/>
                <Button x:Name="SubBtn" Content="-" Foreground="Gray"/>
                <Button x:Name="OneBtn" Content="1"/>
                <Button x:Name="TwoBtn" Content="2"/>
                <Button x:Name="ThreeBtn" Content="3"/>
                <Button x:Name="AddBtn" Content="+" Foreground="Gray"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" ItemHeight="70">
                <WrapPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="2" />
                        <Setter Property="FontSize" Value="25" />
                        <Setter Property="Background" Value="LightGray" />
                        <Setter Property="Opacity" Value="0.95" />
                        <Setter Property="BorderBrush" Value="LightGray" />
                    </Style>
                </WrapPanel.Resources>
                <Button x:Name="DotBtn" Width="70" Content=","/>
                <Button x:Name="ZeroBtn" Width="70" Content="0"/>
                <Button x:Name="EqualsBtn" Width="146" Content="=" Foreground="Gray"/>
            </WrapPanel>
        </StackPanel>
        <TextBox Grid.Row="1" TextAlignment="Right" x:Name="Output" Margin="2" IsReadOnly="True" Opacity="0.90" Background="Transparent" FontSize="20"/>
        <TextBox Grid.Row="2" TextAlignment="Right" x:Name="Result" Margin="2" IsReadOnly="True" FontSize="34" FontWeight="Bold" Opacity="0.90" Background="Transparent"/>
    </Grid>
</Window>
